<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.adonnai.switchdemochangingdrawablecolors"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:id="@+id/relLayerOne"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_right" >
        <TextView
            android:id="@+id/txtBlue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="@dimen/margin_right"
            android:layout_toLeftOf="@+id/switchBlue"
            android:text="@string/blue" />
        <de.ankri.views.Switch
            android:id="@+id/switchBlue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            style="@style/switch_blue_theme"
            app:textOff="@string/off"
            app:textOn="@string/on" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relLayerTwo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relLayerOne"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/margin_right"
        android:layout_marginLeft="@dimen/margin_right"
        android:layout_marginRight="@dimen/margin_right"
        android:gravity="center_vertical" >
        <TextView
            android:id="@+id/txtMaroon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="@dimen/margin_right"
            android:layout_toLeftOf="@+id/switchMaroon"
            android:text="@string/maroon" />
        <de.ankri.views.Switch
            android:id="@+id/switchMaroon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            style="@style/switch_maroon_theme"
            app:textOff="@string/off"
            app:textOn="@string/on" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relLayerThree"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relLayerTwo"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/margin_right"
        android:layout_marginLeft="@dimen/margin_right"
        android:layout_marginRight="@dimen/margin_right"
        android:gravity="center_vertical" >
        <TextView
            android:id="@+id/txtGreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="@dimen/margin_right"
            android:layout_toLeftOf="@+id/switchGreen"
            android:text="@string/green" />
        <de.ankri.views.Switch
            android:id="@+id/switchGreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            style="@style/switch_green_theme"
            app:textOff="@string/off"
            app:textOn="@string/on" />
    </RelativeLayout>
</RelativeLayout>